<Project TreatAsLocalProperty="TaskFolder;TaskAssembly">

  <PropertyGroup>
    <TaskAssembly>$(MSBuildThisFileDirectory)..\tasks\net5.0\Sharpliner.Tools.dll</TaskAssembly>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="YamlDotNet" Version="11.1.1" />
  </ItemGroup>

  <UsingTask TaskName="Sharpliner.Tools.PublishPipelines" AssemblyFile="$(TaskAssembly)" />
</Project>
